{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "cargo check",
        "command": "cargo",
        "args": [
          "check"
        ],
        "problemMatcher": [
          "$rustc"
        ],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "cargo fmt",
        "command": "cargo",
        "args": [
          "fmt"
        ],
        "problemMatcher": [
          "$rustc"
        ],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "cargo build",
        "command": "cargo",
        "args": [
          "build"
        ],
        "problemMatcher": [
          "$rustc"
        ],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "cargo build release",
        "command": "cargo",
        "args": [
          "build",
          "--release"
        ],
        "problemMatcher": [
          "$rustc"
        ],
        "group": "build"
      },
      {
        "type": "shell",
        "label": "cargo run",
        "command": "cargo",
        "args": [
          "run"
        ],
        "problemMatcher": [
          "$rustc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }